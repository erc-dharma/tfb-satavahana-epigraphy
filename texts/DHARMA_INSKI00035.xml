                      <rdg source="bib:Burgess+Buhler1883_01"><supplied reason="lost">pa</supplied>tiṭh<unclear>ā</unclear>pitā</rdg>
                      <rdg source="bib:Gokhale1991_01"><gap reason="lost" unit="character" quantity="5"></gap><supplied reason="lost">pa</supplied>tiṭh<unclear>ā</unclear>pitā</rdg>
