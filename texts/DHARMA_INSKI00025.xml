                     <rdg source="bib:Burgess+Buhler1883_01">kāhāpaṇān<unclear>i</unclear></rdg>
                     <rdg source="bib:Mirashi1981_01">kāhāpaṇān<unclear>i</unclear></rdg>  
                     <rdg source="bib:Gokhale1991_01">kāhāpaṇān<unclear>i</unclear></rdg>
