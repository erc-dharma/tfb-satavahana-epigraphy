                  </app>
               
                  <app loc="9">
                     <lem>ca <unclear>pa</unclear><supplied reason="lost">ṭike</supplied></lem>
                     <rdg source="bib:Burgess+Buhler1883_01">ca <gap reason="lost" quantity="3" unit="character"/></rdg>
                     <rdg source="bib:Gokhale1991_01">ca <gap reason="lost" quantity="3" unit="character"/></rdg>
                  </app>
